{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "strict": true,
    "removeComments": true,
    "allowJs": true,
    "jsx": "react",
    "checkJs": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "*" : ["typings/*"]
    }
  },
  "include": [
    "./*"
  ]
}